# ============= RPC CONFIGURATION =============
# Base L2 reth node (local for lowest latency)
PONDER_RPC_URL_8453=http://127.0.0.1:18545
BASE_RPC_URL=http://127.0.0.1:18545
WS_RPC_URL=ws://127.0.0.1:18546

# ============= API KEYS =============
# Clanker API (token metadata)
CLANKER_API_KEY=your_clanker_api_key

# Zora API (creator profile lookup)
ZORA_API_KEY=your_zora_api_key

# Neynar API (Farcaster user scoring)
NEYNAR_API_KEY=your_neynar_api_key

# Twitter API (follower count lookup)
TWITTER_API_KEY=your_twitter_api_key

# ============= TELEGRAM =============
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
BASE_DEGEN_ALARM=your_telegram_chat_id

# ============= VALIDATION THRESHOLDS =============
# Minimum followers to pass validation
PROMISING_TWITTER_MIN_FOLLOWERS=5000
PROMISING_FARCASTER_MIN_FOLLOWERS=2000
MIN_NEYNAR_SCORE=0.70

# ============= POLLING RATES =============
POLL_INTERVAL_MS=60000
DEXSCREENER_REQUEST_DELAY_MS=500
EXTERNAL_REFRESH_INTERVAL_MS=60000

# ============= HTTP GUARDRAILS (OPTIONAL) =============
# Default timeout + per-host concurrency for outbound HTTP calls.
# Helps prevent hangs and reduces bursty rate-limit issues.
HTTP_TIMEOUT_MS=10000
HTTP_HOST_CONCURRENCY=8

# Per-provider overrides (optional)
DEXSCREENER_TIMEOUT_MS=10000
DEXSCREENER_CONCURRENCY=2
NEYNAR_TIMEOUT_MS=10000
NEYNAR_CONCURRENCY=4
ZORA_TIMEOUT_MS=10000
ZORA_CONCURRENCY=4
TWITTER_TIMEOUT_MS=10000
TWITTER_CONCURRENCY=4
CLANKER_TIMEOUT_MS=10000
CLANKER_CONCURRENCY=4
BASESCAN_TIMEOUT_MS=10000

# ============= SNIPER RELIABILITY (OPTIONAL) =============
# Persist a cursor and backfill recent blocks on startup to reduce missed events
# during WS reconnects/restarts.
SNIPER_ENABLE_BACKFILL=true
SNIPER_BACKFILL_BLOCKS=50
SNIPER_BACKFILL_MAX_LOGS=200
SNIPER_CURSOR_FLUSH_MS=5000

# ============= AUTO-BUY MODULE =============
# ⚠️ WARNING: Keep private key SECRET! Never commit to git!

# Wallet private key (REQUIRED to enable auto-buy)
# Generate a new wallet for trading only - don't use your main wallet!
# AUTOBUY_PRIVATE_KEY=0x...your_private_key_here

# Master switch - set to true to enable auto-buy
AUTOBUY_ENABLED=false

# Trade amount in ETH (default: 0.01 = ~$25)
AUTOBUY_AMOUNT_ETH=0.01

# Daily spending limit in ETH (safety limit)
AUTOBUY_MAX_DAILY_ETH=0.5

# Slippage tolerance % (higher = more likely to execute, but worse price)
# Memecoins are volatile - 10-15% recommended
AUTOBUY_SLIPPAGE_PERCENT=10

# Priority fee in gwei (higher = faster inclusion)
AUTOBUY_GAS_PRIORITY_GWEI=0.1

# Minimum pool liquidity before buying (USD)
# Skip buy if liquidity < this amount
AUTOBUY_MIN_LIQUIDITY_USD=5000
